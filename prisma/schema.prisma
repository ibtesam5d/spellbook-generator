generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  username   String      @unique
  password   String
  name       String?
  role       Role        @default(USER)
  spellbooks Spellbook[]
}

model Spell {
  id              Int         @id @default(autoincrement())
  level           Int
  name            String
  list            String[]
  components      String[]
  description     String
  descriptionList String[]
  moreDescription String?
  duration        String
  range           String
  school          String
  source          String
  subdescription  String?
  time            String
  spellbooks      Spellbook[]
}

model Spellbook {
  id            Int      @id @default(autoincrement())
  userId        Int?
  name          String   @unique
  characterName String
  description   String?
  class         String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  User          User?    @relation(fields: [userId], references: [id])
  spells        Spell[]
}

enum Role {
  USER
  ADMIN
}
